 "html": "{%- macro add_header(page_num, max_pages, doc, letter_head, no_letterhead) -%}\n{% if letter_head and not no_letterhead %}\n<div class=\"letter-head\">{{ letter_head }}</div>\n{% endif %}\n{%- if doc.meta.is_submittable and doc.docstatus==2-%}\n<div class=\"alert alert-danger text-center\">\n   <h4 style=\"margin: 0px;\">{{ _(\"CANCELLED\") }}</h4>\n</div>\n{%- endif -%}\n{% if max_pages > 1 %}\n<p class=\"text-right\">{{ _(\"Page #{0} of {1}\").format(page_num, max_pages) }}</p>\n{% endif %}\n{%- endmacro -%}\n<small>\n   {{ add_header(0,1,doc,letter_head, no_letterhead) }}\n   <big>\n      <h1><p class=\"text-right\"><b>{{ _(\"Tax Invoice\") }}</b></p></h1>\n      <br>\n   </big>\n   <div class=\"row\">\n      <div class=\"col-xs-6\">\n         <div class=\"row\">\n            <div class=\"col-xs-5 text-right\"><big><b>Customer Name</b></big></div>\n            <div class=\"col-xs-7 \"><big>{{ doc.customer or '' }}</big> </div>\n         </div>\n\t <div class=\"row\">\n            <div class=\"col-xs-5 text-right\"><big><b>Attention</b></big></div>\n            <div class=\"col-xs-7 \"><big>{{ doc.contact_display or '' }}</big> </div>\n         </div>\n         <div class=\"row\">\n            <div class=\"col-xs-5 text-right\"><big><b>Billing Address</b></big></div>\n            <div class=\"col-xs-7 \"><big>{{ doc.address_display or '' }}</big></div>\n         </div>\n      </div>\n      <div class=\"col-xs-6\">\n         <div class=\"row\">\n            <div class=\"col-xs-6 text-right\"><big><b>Invoice No</b></big></div>\n            <div class=\"col-xs-6 \"><big>{{ doc.name or '' }}</big> </div>\n         </div>\n         <div class=\"row\">\n            <div class=\"col-xs-6 text-right\"> <big><b>Date</b></big> </div>\n            <div class=\"col-xs-6 \"><big>{{ doc.get_formatted(\"posting_date\") or '' }}</big></div>\n         </div>\n         <div class=\"row\">\n            <div class=\"col-xs-6 text-right\"><big><b>Payment Due Date</b></big></div>\n            <div class=\"col-xs-6 \"><big>{{ doc.get_formatted(\"due_date\") or '' }}</big></div>\n         </div>\n         {%- if doc.po_no -%}\n         <div class=\"row\">\n            <div class=\"col-xs-6 text-right\"><big><b>PO No</b></big></div>\n            <div class=\"col-xs-6 \"><big>{{ doc.po_no or ''}}</big> </div>\n         </div>\n         {%- endif -%}\n{%- if doc.vat_no -%}\n         <div class=\"row\">\n            <div class=\"col-xs-6 text-right\"><big><b>VAT No</b></big></div>\n            <div class=\"col-xs-6 \"><big>{{ doc.vat_no or ''}}</big> </div>\n         </div>\n         {%- endif -%}\n      </div>\n   </div>\n   <br>\n   <table class=\"table table-condensed table-hover table-bordered\">\n      <tr>\n         <th>Sr</th>\n         <th>Description</th>\n         <th class=\"text-right\">Quantity</th>\n         <th class=\"text-right\">Rate</th>\n         <th class=\"text-right\">Amount</th>\n      </tr>\n      {%- for row in doc.items -%}\n      <tr>\n         <td style=\"width: 3%;\">{{ row.idx }}</td>\n         <td style=\"width: 57%;\">\n            <b>{{ row.item_code or '' }} </b><br> \n            {{ row.description or '' }}  \n            {%- if row.serial_no != None -%}\n            <p>\n               serial: \n               {{ row.serial_no|replace(\"\\n\", \", \") }}\n            </p>\n            {% endif %}\n         </td>\n         <td style=\"width: 10%; text-align: center;\">{{ row.qty }}</td>\n         <td style=\"width: 15%; text-align: right;\">\n            {{ row.get_formatted(\"rate\", doc) or ''}}\n         <td style=\"width: 15%; text-align: right;\">{{\n            row.get_formatted(\"amount\", doc) or ''}}\n         </td>\n      </tr>\n      {%- endfor -%}\n      </tbody>\n   </table>\n   <br>\n   <div class=\"row\">\n      <div class=\"col-xs-6 text-right\"></div>\n      <div class=\"col-xs-4 text-right\"> <big><b>{{ _(\"Net Total\") }}</b></big></div>\n      <div class=\"col-xs-2  text-right\">\n         <big>{{ doc.get_formatted(\"net_total\") or '' }}</big>\n      </div>\n   </div>\n   {%- for row in doc.taxes-%}\n   {%- if not row.included_in_print_rate -%}\n   {%- if row.tax_amount -%}      \n   <div class=\"row\">\n      <div class=\"col-xs-6 text-right\"></div>\n      <div class=\"col-xs-4 text-right\"> <big><b> {{ row.description }}</b></big></div>\n      <div class=\"col-xs-2 \"><big>{{ row.get_formatted(\"tax_amount\", doc) }}</big></div>\n   </div>\n   {%- endif -%}\n   {%- else -%}\n   {%- if row.tax_amount -%}      \n   <div class=\"row\">\n      <div class=\"col-xs-6 text-right\"></div>\n      <div class=\"col-xs-4 text-right\"> <big><b> {{ row.description }}</b></big></div>\n      <div class=\"col-xs-2 text-right\"><big>{{ row.get_formatted(\"tax_amount\", doc) }}</big></div>\n   </div>\n   {%- endif -%}\n   {%- endif -%}\n   {%- endfor -%}\n   {%- if doc.discount_amount -%}\n   <div class=\"row\">\n      <div class=\"col-xs-6 text-right\"></div>\n      <div class=\"col-xs-4 text-right\"> <big><b>{{ _(\"Discount\") }}</b></big></div>\n      <div class=\"col-xs-2 text-right\"><big>{{ doc.get_formatted(\"discount_amount\") }}</big></div>\n   </div>\n   {%- endif -%}         \n   <div class=\"row\">\n      <div class=\"col-xs-6 text-right\"></div>\n      <div class=\"col-xs-4 text-right\">\n         <big><b>{{ _(\"Grand Total\") }}</b></big>\n      </div>\n      <div class=\"col-xs-2  text-right\">\n         <big>\n         {{ doc.get_formatted(\"grand_total\") }}</big>\n      </div>\n\n   </div>\n   <div class=\"row\">\n      <div class=\"col-xs-12 text-left\">{{ doc.terms or '' }}</div>\n   </div>\n</small>", 
